{
	"name": "carlogoquiz-api",
	"version": "1.0.0",
	"private": true,
	"description": "Backend API for HardestCarQuiz, built using Cloudflare Workers and D1 Database.",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev --local --env dev",
		"dev:remote": "wrangler dev --env dev",
		"start": "npm run dev",
		"deploy:staging": "wrangler deploy --env staging",
		"deploy:prod": "wrangler deploy --env production",
		"lint": "eslint src/ --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"test:unit": "vitest --config vitest.config.ts --dir test/unit",
		"test:unit:coverage": "vitest --coverage --config vitest.config.ts --dir test/unit",
		"test:acceptance": "vitest --config test/acceptance/vitest.config.ts --dir test/acceptance",
		"test:watch": "vitest --watch --config vitest.config.ts"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/CarQuizHub/hardestcarquiz-api.git"
	},
	"bugs": {
		"url": "https://github.com/CarQuizHub/hardestcarquiz-api/issues"
	},
	"homepage": "https://github.com/CarQuizHub/hardestcarquiz-api#readme",
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.12.8",
		"@cloudflare/workers-types": "^4.20260130.0",
		"@eslint/js": "^9.39.2",
		"@types/node": "^25.1.0",
		"@types/uuid": "^11.0.0",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"esbuild": "^0.25.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-unused-imports": "^4.3.0",
		"globals": "^15.14.0",
		"hono": "^4.11.7",
		"prettier": "^3.8.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.54.0",
		"uuid": "^11.0.5",
		"vitest": "^3.2.4",
		"wrangler": "^4.61.1"
	}
}
